{% extends 'base.html.twig' %}

{% block adminWorld %}active{% endblock %}

{% block title %}Gestion des mondes{% endblock %}

{% block body %}
    <h1>Gestion des mondes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for world in worlds %}
            <tr>
                <td>{{ world.id }}</td>
                <td>{{ world.name }}</td>
                <td>{{ world.description }}</td>
                <td>{{ world.image }}</td>
                <td>{{ world.createdAt ? world.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ world.updatedAt ? world.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_world_show', {'id': world.id}) }}"><i class="fas fa-eye btn-lg text-info"></i></a>
                    <a href="{{ path('admin_world_edit', {'id': world.id}) }}"><i class="fas fa-edit btn-lg text-warning"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('admin_world_new') }}">Create new</a>
{% endblock %}
