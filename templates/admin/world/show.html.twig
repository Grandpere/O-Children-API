{% block adminWorld %}active{% endblock %}

{% block title %}World{% endblock %}

{% block body %}
    <h1>World</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ world.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ world.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ world.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ world.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ world.createdAt ? world.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
