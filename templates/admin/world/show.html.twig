{% extends 'base.html.twig' %}

{% block adminWorld %}active{% endblock %}

{% block title %}World{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end align-items-center">
        <h1 class="mr-auto">World</h1>
        <a class="btn btn-outline-warning mr-2" href="{{ path('admin_world_edit', {'id': world.id}) }}">edit</a>
        {{ include('admin/world/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ world.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ world.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ world.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ world.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ world.createdAt ? world.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ world.updatedAt ? world.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('admin_world_index') }}">back to list</a>
{% endblock %}
