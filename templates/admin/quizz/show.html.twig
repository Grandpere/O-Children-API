{% extends 'base.html.twig' %}

{% block adminQuizz %}active{% endblock %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <h1>Quizz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quizz.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ quizz.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ quizz.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ quizz.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ quizz.createdAt ? quizz.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ quizz.updatedAt ? quizz.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>World</th>
                <td>{{ quizz.world.name }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>
                {% for categorie in quizz.categories %}
                    {{ categorie.name }}{% if quizz.categories|length>1 %}, {% endif %}                  
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_quizz_index') }}">back to list</a>

    <a href="{{ path('admin_quizz_edit', {'id': quizz.id}) }}">edit</a>

    {{ include('admin/quizz/_delete_form.html.twig') }}
{% endblock %}
