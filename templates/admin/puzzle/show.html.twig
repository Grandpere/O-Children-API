{% extends 'base.html.twig' %}

{% block adminPuzzle %}active{% endblock %}

{% block title %}Puzzle{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end align-items-center">
        <h1 class="mr-auto">Puzzle</h1>
        <a class="btn btn-outline-warning mr-2" href="{{ path('admin_puzzle_edit', {'id': puzzle.id}) }}">edit</a>
        {{ include('admin/puzzle/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ puzzle.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ puzzle.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ puzzle.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ puzzle.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ puzzle.createdAt ? puzzle.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ puzzle.updatedAt ? puzzle.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>World</th>
                <td>{{ puzzle.world.name }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>
                {% for categorie in puzzle.categories %}
                    {{ categorie.name }}{% if puzzle.categories|length>1 %}, {% endif %}                  
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('admin_puzzle_index') }}">back to list</a>
{% endblock %}
