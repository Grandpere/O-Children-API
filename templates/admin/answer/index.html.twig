{% extends 'base.html.twig' %}

{% block adminQuizz %}active{% endblock %}

{% block title %}Answer index{% endblock %}

{% block body %}
    <h1>Answer index of Question {{ question.content }} </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Image</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in question.answers %}
            <tr>
                <td>{{ answer.id }}</td>
                <td>{{ answer.content }}</td>
                <td>{{ answer.image }}</td>
                <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ answer.updatedAt ? answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_answer_show', {'id': question.id, 'answerId': answer.id}) }}">show</a>
                    <a href="{{ path('admin_answer_edit', {'id': question.id, 'answerId': answer.id}) }}">edit</a>
                    <form class="form-inline" action="{{ path('admin_question_right', {'id': question.quizz.id, 'questionId':question.id, 'answerId':answer.id }) }}" method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('right' ~ question.id) }}">
                        <button class="btn text-dark" type="submit"><i class="fas fa-check"></i>Mark as right answer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_answer_new', {'id': question.id}) }}">Create new</a>
    <a href="{{ path('admin_question_index', {'id': question.quizz.id}) }}">back to question list</a>
{% endblock %}
