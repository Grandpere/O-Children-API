{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ answer.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ answer.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ answer.updatedAt ? answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_answer_index', {'id': answer.question.id}) }}">back to list</a>

    <a href="{{ path('admin_answer_edit', {'id': answer.question.id, 'answerId': answer.id}) }}">edit</a>

    {{ include('admin/answer/_delete_form.html.twig') }}
{% endblock %}
