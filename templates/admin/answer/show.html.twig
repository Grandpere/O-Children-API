{% extends 'base.html.twig' %}

{% block adminQuizz %}active{% endblock %}

{% block title %}Answer{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end align-items-center">
        <h1 class="mr-auto">Answer</h1>
        <a class="btn btn-outline-warning mr-2" href="{{ path('admin_answer_edit', {'id': answer.question.id, 'answerId': answer.id}) }}">edit</a>
        {{ include('admin/answer/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ answer.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ answer.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ answer.updatedAt ? answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark mt-2" href="{{ path('admin_answer_index', {'id': answer.question.id}) }}">back to list</a>
{% endblock %}
