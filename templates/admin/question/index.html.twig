{% extends 'base.html.twig' %}

{% block adminQuizz %}active{% endblock %}

{% block title %}Question index of quizz {{ quizz.title }}{% endblock %}

{% block body %}
    <h1>Question index of quizz {{ quizz.title }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Image</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in quizz.questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.content }}</td>
                <td>{{ question.image }}</td>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_question_show', {'id': quizz.id, 'questionId': question.id}) }}">show</a>
                    <a href="{{ path('admin_question_edit', {'id': quizz.id, 'questionId': question.id}) }}">edit</a>
                    <a href="{{ path('admin_answer_index', {'id': question.id}) }}">manage answers</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_question_new', {'id': quizz.id}) }}">Create new</a>
    <a href="{{ path('admin_quizz_index') }}">back to quizz list</a>
{% endblock %}
