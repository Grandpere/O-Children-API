{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ question.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ question.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_question_index', {'id': question.quizz.id}) }}">back to list</a>

    <a href="{{ path('admin_question_edit', {'id': question.quizz.id, 'questionId': question.id}) }}">edit</a>

    {{ include('admin/question/_delete_form.html.twig') }}
{% endblock %}
