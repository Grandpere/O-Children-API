{% extends 'base.html.twig' %}

{% block adminQuizz %}active{% endblock %}

{% block title %}Question{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end align-items-center">
        <h1 class="mr-auto">Question</h1>
        <a class="btn btn-outline-warning mr-2" href="{{ path('admin_question_edit', {'id': question.quizz.id, 'questionId': question.id}) }}">edit</a>
        {{ include('admin/question/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ question.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ question.image }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark mt-2" href="{{ path('admin_question_index', {'id': question.quizz.id}) }}">back to list</a>
{% endblock %}
