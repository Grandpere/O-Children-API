{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="window">
    <div class="head">500 - Oops! An Error Occurred</div>
    <div class="terminal">
        <p class="log">
            Something is broken. Please let us know what you were doing when this error occurred.
        </p>
        <p class="log">
            We will fix it as soon as possible. Sorry for any inconvenience caused.
        </p>
        <div id="wrap">
            <span class="cursor">{{ app.user.firstname}}@{{ app.request.server.get("SERVER_NAME") }}</span> <span class="end-line">$ </span>
        </div>
        <div class="command">&nbsp;</div>
        <div class="command">
            <ul>
                <li>
                    <a class="term-link" href="{{ path('admin_index') }}">return to the homepage</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}