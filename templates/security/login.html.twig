{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="window">
    <div class="head">Please sign in</div>
    <div class="terminal">
        <div class="form-row">
            <label for="inputEmail" class="cursor col">Email</label><span class="end-line">$ </span>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="col-10 mb-2" placeholder="Email" required autofocus>
        </div>
        <div class="form-row">
            <label for="inputPassword" class="cursor col">Password</label><span class="end-line">$ </span>
            <input type="password" name="password" id="inputPassword" class="col-10 mb-2" placeholder="Password" required>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-outline-success term-link mt-2" type="submit">
        Sign in
    </button>
    </div>
</div>
</form>
{% endblock %}
