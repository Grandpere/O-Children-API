                    <a class="nav-link {% block adminHome %}{% endblock %}" href="{{ path('admin_index') }}"><i class="fas fa-home text-success"></i> Home</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link {% block adminWorld %}{% endblock %}" href="{{ path('admin_world_index') }}"><i class="fas fa-globe-europe text-success"></i> Gestion des mondes</a>
